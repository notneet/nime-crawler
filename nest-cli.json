{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/nime-crawler/src",
  "projects": {
    "commons": {
      "type": "library",
      "root": "libs/commons",
      "entryFile": "index",
      "sourceRoot": "libs/commons/src",
      "compilerOptions": {
        "tsConfigPath": "libs/commons/tsconfig.lib.json"
      }
    },
    "nime-crawler": {
      "type": "application",
      "root": "apps/nime-crawler",
      "entryFile": "main",
      "sourceRoot": "apps/nime-crawler/src",
      "compilerOptions": {
        "tsConfigPath": "apps/nime-crawler/tsconfig.app.json"
      }
    },
    "api": {
      "type": "application",
      "root": "apps/api",
      "entryFile": "main",
      "sourceRoot": "apps/api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api/tsconfig.app.json"
      }
    }
  },
  "compilerOptions": {
    "webpack": true,
    "tsConfigPath": "apps/nime-crawler/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/nime-crawler"
}